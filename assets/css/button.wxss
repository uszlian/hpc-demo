/* 主色调 */
.hpcBtn {
  width: 600rpx !important;
  height: 88rpx;
  padding: 0;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  background: #00B26A;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hpcBtn[disabled] {
  color: #9C9CA4;
  background: #DEDEE0 !important;
}

.hpcBtn:active::before {
  display: block;
  content: '';
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 5%)
}

.hpcBtn[disabled]:active::before {
  content: none;
}

/* 灰色边框 */
.hpcGrayBorderBtn {
  width: 600rpx !important;
  height: 88rpx;
  padding: 0;
  border-radius: 44rpx;
  border: 1rpx solid rgba(151, 151, 151, 1);
  font-size: 32rpx;
  font-weight: bold;
  color: #666666;
  background: #F5F5F5;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 微信rpx适配bug */
  transform: scale(1);
}

.hpcGrayBorderBtn[disabled] {
  color: #9C9CA4;
  background: #DEDEE0 !important;
}

.hpcGrayBorderBtn:active::before {
  display: block;
  content: '';
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 5%)
}

.hpcGrayBorderBtn[disabled]:active::before {
  content: none;
}